<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultWebViewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryDark</item>
        <item name="colorAccent">?attr/colorAccent</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="toolbarStyle">@style/DefaultWebViewToolbar</item>
        <item name="buttonStyle">@style/DefaultWebViewButton</item>
        <item name="titleTextColor">@color/text_grey</item>
    </style>

    <style name="DefaultWebViewToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/text_grey</item>
        <item name="subtitleTextColor">@color/text_grey_alpha_50</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
        <item name="elevation">@dimen/toolbar_elevation</item>
    </style>

    <style name="DefaultWebViewButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

</resources>